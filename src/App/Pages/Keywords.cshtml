@page
@model App.Pages.KeywordsModel
@{
    ViewData["Title"] = "Keywords";
}

<h4>Tutte le keywords trovate</h4>

@if (Model.Keywords != null)
{
    <div class="row">
        <form asp-page="./Keywords" method="get">
            <div class="form-group col-5 mb-2">
                <div class="input-group">
                    <input class="form-control" type="text" id="search-keyword" placeholder="Ricerca tra le keyword" />
                    <button type="submit" class="input-group-text btn btn-outline-secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                        </svg>
                    </button>
                </div>
            </div>

            <a asp-page="./Keywords">Ritorna alla lista completa</a>
        </form>
        <br />
        <form method="post">
            <button class="btn btn-outline-secondary mb-2" id="rank-btn" title="Clicca per classificare le keyword" type="submit">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-bar-graph" viewBox="0 0 16 16">
                    <path d="M10 13.5a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-6a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v6zm-2.5.5a.5.5 0 0 1-.5-.5v-4a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5h-1zm-3 0a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-1z" />
                    <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5v2z" />
                </svg>
                Rank
            </button>
        </form>

    </div>

    <table class="table" id="keywords-table">
        <thead>
            <tr class="table-primary">
                <th>
                    <a asp-page="./Keywords" asp-route-sortOrder="@Model.IdSort">
                        @Html.DisplayNameFor(m => m.Keywords[0].Id)
                    </a>
                </th>
                <th>
                    <a asp-page="./Keywords" asp-route-sortOrder="@Model.ValueSort">
                        @Html.DisplayNameFor(m => m.Keywords[0].Value)
                    </a>
                </th>
                <th>
                    <a asp-page="./Keywords" asp-route-sortOrder="@Model.StartingSeedSort">
                        Seed di partenza
                    </a>
                </th>
                <th>
                    <a asp-page="./Keywords" asp-route-sortOrder="@Model.CultureSort">
                        @Html.DisplayNameFor(m => m.Keywords[0].Culture)
                    </a>
                </th>
                <th>
                    <a asp-page="./Keywords" asp-route-sortOrder="@Model.RankingSort">
                        @Html.DisplayNameFor(m => m.Keywords[0].Ranking)
                    </a>
                </th>
                <th>
                    <a asp-page="./Keywords" asp-route-sortOrder="@Model.TimeStampSort">
                        @Html.DisplayNameFor(m => m.Keywords[0].Timestamp)
                    </a>
                </th>
                <th>
                    <a asp-page="./Keywords" asp-route-sortOrder="@Model.SuggestServiceSort">
                        Servizio di suggest
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var keyword in Model.Keywords)
            {
                <tr>
                    <td>
                        @keyword.Id
                    </td>
                    <td>
                        @keyword.Value
                    </td>
                    <td>
                        @keyword.StartingSeed
                    </td>
                    <td>
                        @keyword.Culture
                    </td>
                    <td>
                        @keyword.Ranking
                    </td>
                    <td>
                        @keyword.Timestamp.ToLocalTime()
                    </td>
                    <td>
                        @keyword.SuggestService
                    </td>
                </tr>
            }
        </tbody>
    </table>

    var prevDisabled = !Model.Keywords.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Keywords.HasNextPage ? "disabled" : "";

    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @prevDisabled">
                <a class="page-link"
               asp-page="./Keywords"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.Keywords.PageIndex - 1)"
               asp-route-currentFilter="@Model.CurrentFilter">
                    &laquo;
                </a>
            </li>
            <li class="page-item disabled">
                <span class="page-link">
                    @Model.Keywords.PageIndex
                </span>
            </li>
            <li class="page-item @nextDisabled">
                <a class="page-link"
               asp-page="./Keywords"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.Keywords.PageIndex + 1)"
               asp-route-currentFilter="@Model.CurrentFilter">
                    &raquo;
                </a>
            </li>
        </ul>
    </nav>
}
else
{
    <div class="text-center alert alert-secondary" role="alert">
        Non sono ancora state trovate keyword
    </div>
}

