@page
@model App.Pages.KeywordsModel
@{
    ViewData["Title"] = "Keywords";
}

<h4>Tutte le keywords trovate</h4>

@* TODO: paginazione e filtering *@
@if (Model.Keywords != null)
{
    <table class="table">
        <thead>
            <tr class="table-primary">
                <th>
                    <a asp-page="./Keywords" asp-route-sortOrder="@Model.IdSort">
                        @Html.DisplayNameFor(m => m.Keywords[0].Id)
                    </a>
                </th>
                <th>
                    <a asp-page="./Keywords" asp-route-sortOrder="@Model.ValueSort">
                        @Html.DisplayNameFor(m => m.Keywords[0].Value)
                    </a>
                </th>
                <th>
                    <a asp-page="./Keywords" asp-route-sortOrder="@Model.CultureSort">
                        @Html.DisplayNameFor(m => m.Keywords[0].Culture)
                    </a>
                </th>
                <th>
                    <a asp-page="./Keywords" asp-route-sortOrder="@Model.RankingSort">
                        @Html.DisplayNameFor(m => m.Keywords[0].Ranking)
                    </a>
                </th>
                <th>
                    <a asp-page="./Keywords" asp-route-sortOrder="@Model.TimeStampSort">
                        @Html.DisplayNameFor(m => m.Keywords[0].Timestamp)
                    </a>
                </th>
                <th>
                    <a asp-page="./Keywords" asp-route-sortOrder="@Model.SuggestServiceSort">
                        @Html.DisplayNameFor(m => m.Keywords[0].SuggestService)
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var keyword in Model.Keywords)
            {
                <tr>
                    <td>
                        @keyword.Id
                    </td>
                    <td>
                        @keyword.Value
                    </td>
                    <td>
                        @keyword.Culture
                    </td>
                    <td>
                        @keyword.Ranking
                    </td>
                    <td>
                        @keyword.Timestamp.ToLocalTime()
                    </td>
                    <td>
                        @keyword.SuggestService
                    </td>
                </tr>
            }
        </tbody>
    </table>

    var prevDisabled = !Model.Keywords.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Keywords.HasNextPage ? "disabled" : "";

    <a asp-page="./Keywords"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Keywords.PageIndex - 1)"
   class="btn btn-primary @prevDisabled">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-square" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
        </svg>
    </a>

    <a asp-page="./Keywords"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Keywords.PageIndex + 1)"
   class="btn btn-primary @nextDisabled">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-square" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm4.5 5.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z" />
        </svg>
    </a>
}
else
{
    <div class="text-center alert alert-secondary" role="alert">
        Non sono ancora state trovate keyword
    </div>
}