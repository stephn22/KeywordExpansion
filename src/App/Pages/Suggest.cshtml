@page
@model App.Pages.SuggestModel
@{
    ViewData["Title"] = "Suggest";
}

<form method="post">
    <h4>Seleziona in che modo generare le keyword</h4>
    <div class="form-check">
        <input class="form-check-input radio-btn" name="suggest-generation-type" type="radio" id="keyword-radio" checked required />
        <label class="form-check-label" for="keyword-radio">Keyword</label>
    </div>
    <div class="form-check">
        <input class="form-check-input radio-btn" name="suggest-generation-type" type="radio" id="file-radio" required />
        <label class="form-check-label" for="file-radio">File</label>
    </div>
    <hr />
    <div class="form-floating col-4 mb-2">
        <input type="text" class="form-control" id="keyword" asp-for="Input.Keyword" placeholder="Keyword">
        <label for="keyword">Keyword</label>
        <small class="small invalid-feedback" id="keyword-invalid-feedback"></small>
    </div>
    <div class="form-group col-4 mb-2">
        <select id="select-culture" class="form-control" aria-label="countries" asp-items="Model.Cultures" asp-for="Input.Culture">
            <option value="">-- Seleziona Cultura --</option>
        </select>
        <small class="small invalid-feedback" id="culture-invalid-feedback"></small>
    </div>
    <hr />
    <div class="form-group col-4 mb-2" data-bs-toggle="popover" data-bs-trigger="hover focus" title="Formato file CSV" data-bs-content="Il formato delle colonne del file CSV deve essere del tipo (Id, Value, Culture, Ranking)">
        <label for="keyword">File</label>
        <input type="file" class="form-control" id="file" asp-for="Input.File" placeholder="File">
        <small class="small invalid-feedback" id="file-invalid-feedback"></small>
    </div>
    <hr />
    <div class="form-floating col-4 mb-2">
        <input type="number" class="form-control" min="0" value="1" id="depth" asp-for="Input.Depth" placeholder="Depth" required>
        <label for="depth">Prodondita' di espansione</label>
        <small class="small text-muted" id="depth-info">Inserire 0 per non espandere a nessun livello</small>
    </div>
    <hr />
    <div class="form-group" required>
        <div class="form-check form-switch">
            <input class="form-check-input switch" type="checkbox" asp-for="Input.IsGoogleSuggest" id="google-suggest" />
            <label class="form-check-label" for="google-suggest">Google Suggest</label>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input switch" type="checkbox" asp-for="Input.IsBingSuggest" id="bing-suggest" />
            <label class="form-check-label" for="bing-suggest">Bing Suggest</label>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input switch" type="checkbox" asp-for="Input.IsDuckDuckGoSuggest" id="duckduckgo-suggest" />
            <label class="form-check-label" for="duckduckgo-suggest">DuckDuckGo Suggest</label>
        </div>
        <small class="small invalid-feedback" id="service-invalid-feedback"></small>
    </div>
    <hr />
    <button type="submit" class="btn btn-primary" id="submit-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
            <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
            <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"/>
        </svg>
        Invia
    </button>
</form>
<hr />

@section Scripts
{
<script src="/js/suggest.js" type="text/javascript"></script>
}
